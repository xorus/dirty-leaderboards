{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": false,
    "noEmit": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
